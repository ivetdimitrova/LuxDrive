@{
    ViewData["Title"] = "Contact Sales";
}

<section style="padding:60px; color:#fff; background-color:#000;">
    <div class="container text-center">
        <h1 class="gold glow">Contact Sales</h1>
        <p>Need a custom plan or enterprise pricing? Reach out to our sales team.</p>

        <form style="max-width:500px;margin:30px auto;text-align:left;">
            <label for="name">Name</label>
            <input type="text" id="name" class="form-control mb-3" placeholder="Your full name">

            <label for="email">Email</label>
            <input type="email" id="email" class="form-control mb-3" placeholder="Your email address">

            <label for="message">Message</label>
            <textarea id="message" class="form-control mb-3" rows="4" placeholder="Your message..."></textarea>

            <button type="submit" class="btn btn-warning w-100">Send Message</button>
        </form>
    </div>
</section>
