@{
    ViewData["Title"] = "Contact Sales";
}

@section Styles {
    <link rel="stylesheet" href="~/css/contact.css" />
}

<div class="lux-contact-wrapper">
    <div class="lux-card">

        <div class="contact-header">
            <h1>Contact <span class="glow">Sales</span></h1>
            <p>Need a custom enterprise plan? Reach out to our team.</p>
        </div>

        <div id="success-message" class="success-banner" style="display: none;">
            <div class="success-icon">
                <i class="fas fa-check"></i>
            </div>
            <h3>Request Received</h3>
            <p>Thank you. A specialist has been assigned to your case and will contact you shortly.</p>
            <button class="btn-lux" onclick="location.reload()">Return to Form</button>
        </div>

        <form id="contact-form">
            <div class="form-floating">
                <input type="text" class="form-control" id="name" placeholder="Full Name" required>
                <label for="name">Full Name</label>
            </div>

            <div class="form-floating">
                <input type="email" class="form-control" id="email" placeholder="Email Address" required>
                <label for="email">Email Address</label>
            </div>

            <div class="form-floating">
                <input type="text" class="form-control" id="company" placeholder="Company Name">
                <label for="company">Company Name (Optional)</label>
            </div>

            <div class="form-floating">
                <textarea class="form-control" id="message" placeholder="Your Message" required></textarea>
                <label for="message">How can we help you?</label>
            </div>

            <button type="submit" class="btn-lux" id="send-btn">Send Request</button>

            <div class="info-note">
                <i class="fas fa-shield-alt"></i>
                Data processed securely. 24h response time.
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <script src="~/js/contact.js"></script>
}