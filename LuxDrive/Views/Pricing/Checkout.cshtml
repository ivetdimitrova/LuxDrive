@{
    ViewData["Title"] = "Checkout";
    var plan = ViewBag.Plan?.ToString() ?? "unknown";
}

<div class="checkout-wrapper">
    <div class="checkout-container">

        <h1>Payment for @plan plan</h1>
        <p>Enter your card details below to complete your purchase.</p>

        <form method="post" action="/Payment/Process">

            <label>Card Number:</label>
            <input type="text" name="CardNumber" required />

            <label>Expiration Date:</label>
            <input type="text" name="Expiry" required />

            <label>CVC:</label>
            <input type="text" name="CVC" required />

            <button type="submit" class="checkout-btn">Pay Now</button>

        </form>

    </div>
</div>
