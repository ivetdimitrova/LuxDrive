@{
    ViewData["Title"] = "Checkout";
    var plan = ViewBag.Plan?.ToString() ?? "Basic";
    string price = "4.99";
    if (plan.ToLower().Contains("pro")) { price = "14.99"; }
    else if (plan.ToLower().Contains("premium")) { price = "29.99"; }
    else if (plan.ToLower().Contains("enterprise")) { price = "Custom"; }
}

@section Styles {
    <link rel="stylesheet" href="~/css/checkout.css" />
}

<div class="lux-payment-wrapper">
    <div class="lux-card">

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="error-banner">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
                <span>@TempData["ErrorMessage"]</span>
            </div>
        }

        <div class="checkout-header">
            <h2>@plan Plan</h2>
            <p>Secure Credit Card Payment</p>
            <span class="price-display">€@price</span>
        </div>

        <form method="post" asp-controller="Pricing" asp-action="Process" id="payment-form">

            <input type="hidden" name="plan" value="@plan" />

            <div class="form-floating">
                <input type="text" class="form-control" id="cardName" name="CardName" placeholder="Name on Card" required>
                <label for="cardName">Name on Card</label>
            </div>

            <div class="form-floating">
                <input type="text" class="form-control" id="cardNumber" name="CardNumber" placeholder="0000 0000 0000 0000" maxlength="19" required>
                <label for="cardNumber">Card Number</label>
            </div>

            <div class="row-gaps">
                <div class="col-half">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="expiry" name="Expiry" placeholder="MM/YY" maxlength="5" required>
                        <label for="expiry">Expiry (MM/YY)</label>
                    </div>
                </div>
                <div class="col-half">
                    <div class="form-floating">
                        <input type="password" class="form-control" id="cvc" name="CVC" placeholder="123" maxlength="3" required>
                        <label for="cvc">CVC</label>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn-lux" id="pay-btn">
                Pay Now
            </button>

            <div class="secure-badge">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="#c6a664" viewBox="0 0 16 16">
                    <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z" />
                </svg>
                Encrypted & Secure Transaction
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <script src="~/js/checkout.js"></script>
}