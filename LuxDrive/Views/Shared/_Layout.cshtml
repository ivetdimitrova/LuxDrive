<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LuxDrive</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    @if (TempData["SuccessMessage"] != null)
    {
        <div id="success-alert" class="lux-alert">
            <div class="alert-icon">✨</div>
            <div class="alert-content">
                <h4>Success</h4>
                <p>@TempData["SuccessMessage"]</p>
            </div>
        </div>
    }

    <div class="container-fluid p-0 m-0 layout-wrapper">
        <header class="lux-header">
            <div class="lux-logo">
                <span class="highlight">Lux</span>Drive
            </div>

            <nav class="lux-nav">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <a class="lux-nav-link" asp-controller="File" asp-action="Index">Home</a>
                }
                else
                {
                    <a class="lux-nav-link" asp-controller="Home" asp-action="Index">Home</a>
                }

                <a class="lux-nav-link" asp-controller="Features" asp-action="Index">Features</a>
                <a class="lux-nav-link" asp-controller="Pricing" asp-action="Index">Pricing</a>

                <partial name="_LoginPartial" />
            </nav>
        </header>

        <main role="main" class="lux-main">
            @RenderBody()
        </main>

        <footer class="lux-footer text-center">
            <p>
                © 2026 <strong>LuxDrive</strong> — All rights reserved |
                <a href="#">Privacy Policy</a> |
                <a href="#">Terms of Use</a>
            </p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>