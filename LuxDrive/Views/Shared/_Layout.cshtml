<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LuxDrive</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LuxDrive.styles.css" asp-append-version="true" />

    <style>
        html, body {
            background-color: #000 !important;
            margin: 0;
            padding: 0;
            color: #fff;
            overflow-x: hidden;
        }

        main {
            background-color: #000;
            min-height: 90vh;
        }

        /* LUXDRIVE FOOTER */
        footer.lux-footer {
            background-color: #000;
            border-top: 1px solid #1a1a1a;
            text-align: center;
            padding: 30px 0;
            color: #888;
            font-size: 0.95rem;
            letter-spacing: 0.5px;
        }

        footer.lux-footer a {
            color: #c6a664;
            text-decoration: none;
            margin: 0 10px;
            transition: color 0.3s ease;
        }

        footer.lux-footer a:hover {
            color: #b18c4b;
        }

        .gold {
            color: #c6a664;
        }

        .glow {
            text-shadow: 0 0 6px rgba(198, 166, 100, 0.5);
        }
    </style>
</head>
<body>
    <div class="container-fluid p-0 m-0" style="background-color:#000;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="lux-footer">
            <p>© 2025 <span class="gold glow">LuxDrive</span> — All rights reserved |
                <a href="#">Privacy Policy</a> |
                <a href="#">Terms of Use</a>
            </p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
