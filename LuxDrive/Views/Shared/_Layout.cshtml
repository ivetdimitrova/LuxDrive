@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LuxDrive</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid p-0 m-0" style="background-color:#000;">
        <header class="header" style="padding:15px 30px;display:flex;justify-content:space-between;align-items:center;">
            <div class="logo" style="color:#fff;font-size:26px;font-weight:bold;">
                <span class="gold glow">Lux</span>Drive
            </div>

            <nav class="nav" style="display:flex;align-items:center;gap:20px;">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="nav-link text-gold" asp-controller="File" asp-action="Index">Home</a>
                }
                else
                {
                    <a class="nav-link text-gold" asp-controller="Home" asp-action="Index">Home</a>
                }

                <a class="nav-link text-gold" asp-controller="Features" asp-action="Index">Features</a>
                <a class="nav-link text-gold" asp-controller="Pricing" asp-action="Index">Pricing</a>
                <partial name="_LoginPartial" />
            </nav>
        </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="lux-footer text-center p-3" style="background-color:#111;color:#c6a664;">
            <p>
                © 2025 <span class="gold glow">LuxDrive</span> — All rights reserved |
                <a href="#" class="text-gold">Privacy Policy</a> |
                <a href="#" class="text-gold">Terms of Use</a>
            </p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>