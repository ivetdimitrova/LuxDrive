<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LuxDrive</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LuxDrive.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid p-0 m-0" style="background-color:#000;">
        <!-- HEADER -->
        <header class="header">
            <div class="header-inner">
                <div class="logo">
                    <span class="gold glow">Lux</span>Drive
                </div>
                <nav class="nav">
                    <a href="/">Home</a>
                    <a href="/Features">Features</a>
                    <a href="/Pricing">Pricing</a>
                    <a href="/Account/Login">Sign In</a>
                </nav>
            </div>
        </header>

        <!-- MAIN CONTENT -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <!-- FOOTER -->
        <footer class="lux-footer">
            <p>
                © 2025 <span class="gold glow">LuxDrive</span> — All rights reserved |
                <a href="#">Privacy Policy</a> |
                <a href="#">Terms of Use</a>
            </p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
