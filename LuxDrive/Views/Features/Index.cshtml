@{
    ViewData["Title"] = "Features - LuxDrive";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        background-color: #050505;
        color: #fff;
        font-family: 'Montserrat', 'Segoe UI', sans-serif;
        overflow-x: hidden;
        width: 100%;
    }

    .hero {
        height: 50vh; 
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        position: relative;
        overflow: hidden;
        perspective: 1000px;
    }

    .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at center, #1a1a1a 0%, #000 100%);
        z-index: 0;
    }

    .spotlight {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 1;
        background: radial-gradient(600px circle at var(--mouse-x, 50%) var(--mouse-y, 50%), rgba(198, 166, 100, 0.15), transparent 40%);
    }

    #particles-canvas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 2;
        pointer-events: none;
    }

    .hero-cloud {
        position: absolute;
        z-index: 3;
        opacity: 0.6;
        filter: drop-shadow(0 0 20px rgba(198, 166, 100, 0.2));
        pointer-events: none;
        will-change: transform;
    }

    .cloud-1 {
        top: 5%;
        left: -5%;
        width: 350px;
        filter: blur(2px);
    }

    .cloud-2 {
        bottom: 10%;
        right: -5%;
        width: 400px;
        filter: blur(3px);
    }

    .cloud-3 {
        top: 20%;
        right: 15%;
        width: 150px;
        opacity: 0.8;
    }

    .hero-text {
        position: relative;
        z-index: 10;
        max-width: 900px;
        padding: 0 20px;
        animation: fadeUpHero 1.2s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    }

    .gold-shimmer {
        background: linear-gradient(to right, #bf953f, #fcf6ba, #b38728, #fbf5b7, #aa771c);
        background-size: 200% auto;
        color: transparent;
        -webkit-background-clip: text;
        background-clip: text;
        animation: shine 4s linear infinite;
        font-weight: 800;
    }

    @@keyframes shine {
        to

    {
        background-position: 200% center;
    }

    }

    @@keyframes fadeUpHero {
        from

    {
        opacity: 0;
        transform: translateY(50px) scale(0.95);
    }

    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }

    }

    .hero-text h1 {
        font-size: 4rem;
        margin-bottom: 20px;
        line-height: 1.1;
        font-weight: 700;
        text-shadow: 0 10px 40px rgba(0,0,0,0.9);
    }

    .hero-text p {
        color: #d1d1d1;
        font-size: 1.2rem;
        margin-bottom: 20px;
        font-weight: 300;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 30px;
        padding: 50px 5%; 
        background: #000;
        position: relative;
        z-index: 2;
        max-width: 1400px;
        margin: 0 auto;
    }

    .feature-card {
        padding: 40px 30px;
        border: 1px solid rgba(255,255,255,0.08);
        border-radius: 20px;
        background: rgba(20, 20, 20, 0.6); 
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        text-align: left;
        opacity: 0;
        transform: translateY(80px) scale(0.95);
        transition: all 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

        .feature-card.show {
            opacity: 1;
            transform: translateY(0) scale(1);
        }

        .feature-card:hover {
            border-color: rgba(198, 166, 100, 0.5);
            transform: translateY(-10px) scale(1.02) !important;
            background: rgba(30, 30, 30, 0.8);
            box-shadow: 0 20px 50px rgba(198, 166, 100, 0.15);
        }

        .feature-card h3 {
            color: #fff;
            font-size: 1.5rem;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

    .gold-text {
        color: #c6a664;
        text-shadow: 0 0 15px rgba(198, 166, 100, 0.2);
    }

    .feature-card p {
        color: #aaa;
        line-height: 1.6;
        font-size: 0.95rem;
    }

    @@media (max-width: 768px) {
        .hero

    {
        height: 40vh;
    }

    .hero-text h1 {
        font-size: 2.5rem;
    }

    .features-grid {
        grid-template-columns: 1fr;
        padding: 30px 20px;
    }

    }
</style>

<section class="hero" id="hero-section">
    <div class="hero-bg"></div>
    <div class="spotlight"></div>
    <canvas id="particles-canvas"></canvas>

    <img src="/images/gold-cloud.png" class="hero-cloud cloud-1" data-speed="0.05" data-depth="0.2" />
    <img src="/images/gold-cloud.png" class="hero-cloud cloud-2" data-speed="-0.06" data-depth="0.3" />
    <img src="/images/gold-cloud.png" class="hero-cloud cloud-3" data-speed="0.04" data-depth="0.5" />

    <div class="hero-text">
        <h1>LuxDrive <span class="gold-shimmer">Features</span></h1>
        <p>Discover the cutting-edge technology that powers LuxDrive — built for speed, privacy, and limitless scalability.</p>
    </div>
</section>

<section class="features-grid">

    <div class="feature-card" style="transition-delay: 0s;">
        <h3 class="gold-text">⚡ Ultra-Fast Transfers</h3>
        <p>Experience lightning-fast uploads and downloads with our global CDN and SSD-backed storage nodes optimized for high throughput.</p>
    </div>

    <div class="feature-card" style="transition-delay: 0.1s;">
        <h3 class="gold-text">🔒 End-to-End Encryption</h3>
        <p>Your files are encrypted before leaving your device, ensuring no one — not even LuxDrive — can access your private data.</p>
    </div>

    <div class="feature-card" style="transition-delay: 0.2s;">
        <h3 class="gold-text">🌍 Multi-Device Sync</h3>
        <p>Keep all your devices synchronized in real time. Access your files from desktop, mobile, or web seamlessly.</p>
    </div>

    <div class="feature-card" style="transition-delay: 0s;">
        <h3 class="gold-text">☁️ Smart Cloud Backup</h3>
        <p>Automatic, versioned backups mean your data is never lost — restore older versions with one click.</p>
    </div>

    <div class="feature-card" style="transition-delay: 0.1s;">
        <h3 class="gold-text">🧠 AI-Powered Search</h3>
        <p>Find files instantly with intelligent search that understands context, not just filenames.</p>
    </div>

    <div class="feature-card" style="transition-delay: 0.2s;">
        <h3 class="gold-text">🛡️ Zero Downtime</h3>
        <p>Our distributed system guarantees 99.99% uptime and resilience against network or hardware failures.</p>
    </div>

    <div class="feature-card" style="transition-delay: 0s;">
        <h3 class="gold-text">📁 Unlimited Storage</h3>
        <p>Choose from flexible pricing options, including plans with truly unlimited cloud storage for professionals and enterprises.</p>
    </div>

    <div class="feature-card" style="transition-delay: 0.1s;">
        <h3 class="gold-text">💬 Team Collaboration</h3>
        <p>Share folders, assign permissions, and work together in real time with integrated chat and file commenting.</p>
    </div>

    <div class="feature-card" style="transition-delay: 0.2s;">
        <h3 class="gold-text">🔧 API & Developers</h3>
        <p>Integrate LuxDrive into your own apps and workflows using our open REST API with detailed documentation.</p>
    </div>

</section>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('show');
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.1 }); 

            document.querySelectorAll('.feature-card').forEach(card => observer.observe(card));


            const hero = document.querySelector('.hero');

            hero.addEventListener('mousemove', (e) => {
                const rect = hero.getBoundingClientRect();
                hero.style.setProperty('--mouse-x', `${e.clientX - rect.left}px`);
                hero.style.setProperty('--mouse-y', `${e.clientY - rect.top}px`);
            });

            const clouds = document.querySelectorAll('.hero-cloud');
            let mouseX = 0, mouseY = 0, targetX = 0, targetY = 0;
            document.addEventListener('mousemove', (e) => {
                targetX = (window.innerWidth / 2 - e.pageX) / 20;
                targetY = (window.innerHeight / 2 - e.pageY) / 20;
            });
            function animateClouds() {
                mouseX += (targetX - mouseX) * 0.05;
                mouseY += (targetY - mouseY) * 0.05;
                const scrollY = window.scrollY;
                clouds.forEach(cloud => {
                    const speed = parseFloat(cloud.getAttribute('data-speed'));
                    const depth = parseFloat(cloud.getAttribute('data-depth'));
                    cloud.style.transform = `translate3d(${mouseX * depth}px, ${scrollY * depth + mouseY * depth}px, 0) rotate(${scrollY * speed * 5}deg)`;
                });
                requestAnimationFrame(animateClouds);
            }
            animateClouds();

            const canvas = document.getElementById('particles-canvas');
            const ctx = canvas.getContext('2d');
            let width, height, particles = [];
            function resize() { width = canvas.width = window.innerWidth; height = canvas.height = window.innerHeight; }
            window.addEventListener('resize', resize);
            resize();

            class Particle {
                constructor() { this.reset(); }
                reset() {
                    this.x = Math.random() * width; this.y = Math.random() * height;
                    this.size = Math.random() * 2 + 0.5;
                    this.speedX = (Math.random() - 0.5) * 0.5; this.speedY = (Math.random() - 0.5) * 0.5;
                    this.alpha = Math.random() * 0.5 + 0.1; this.fadingOut = Math.random() > 0.5;
                }
                update() {
                    this.x += this.speedX; this.y += this.speedY;
                    if(this.fadingOut){ this.alpha-=0.01; if(this.alpha<=0){this.fadingOut=false;this.reset();}}
                    else{ this.alpha+=0.01; if(this.alpha>=0.8)this.fadingOut=true;}
                }
                draw() {
                    ctx.fillStyle = `rgba(198, 166, 100, ${this.alpha})`;
                    ctx.beginPath(); ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2); ctx.fill();
                }
            }
            for(let i=0; i<60; i++) particles.push(new Particle()); 
            function animateP() { ctx.clearRect(0,0,width,height); particles.forEach(p=>{p.update();p.draw();}); requestAnimationFrame(animateP); }
            animateP();
        });
    </script>
}