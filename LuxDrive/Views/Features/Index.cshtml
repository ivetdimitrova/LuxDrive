@{
    ViewData["Title"] = "Features - LuxDrive";
}

@section Styles {
    <link rel="stylesheet" href="~/css/features.css" asp-append-version="true" />
}

<section class="hero" id="hero-section">
    <div class="hero-bg"></div>
    <div class="spotlight"></div>
    <canvas id="particles-canvas"></canvas>

    <img src="~/images/gold-cloud.png" class="hero-cloud cloud-1" data-speed="0.05" data-depth="0.2" />
    <img src="~/images/gold-cloud.png" class="hero-cloud cloud-2" data-speed="-0.06" data-depth="0.3" />
    <img src="~/images/gold-cloud.png" class="hero-cloud cloud-3" data-speed="0.04" data-depth="0.5" />

    <div class="hero-text">
        <h1>LuxDrive <span class="gold-shimmer">Features</span></h1>
        <p>Discover the cutting-edge technology that powers LuxDrive — built for speed, privacy, and limitless scalability.</p>
    </div>
</section>

<section class="features-grid">
    <div class="feature-card" style="transition-delay: 0s;">
        <h3 class="gold-text">⚡ Ultra-Fast Transfers</h3>
        <p>Experience lightning-fast uploads and downloads with our global CDN and SSD-backed storage nodes optimized for high throughput.</p>
    </div>

    <div class="feature-card" style="transition-delay: 0.1s;">
        <h3 class="gold-text">🔒 End-to-End Encryption</h3>
        <p>Your files are encrypted before leaving your device, ensuring no one — not even LuxDrive — can access your private data.</p>
    </div>

    <div class="feature-card" style="transition-delay: 0.2s;">
        <h3 class="gold-text">🌍 Multi-Device Sync</h3>
        <p>Keep all your devices synchronized in real time. Access your files from desktop, mobile, or web seamlessly.</p>
    </div>

    <div class="feature-card" style="transition-delay: 0s;">
        <h3 class="gold-text">☁️ Smart Cloud Backup</h3>
        <p>Automatic, versioned backups mean your data is never lost — restore older versions with one click.</p>
    </div>

    <div class="feature-card" style="transition-delay: 0.1s;">
        <h3 class="gold-text">🧠 AI-Powered Search</h3>
        <p>Find files instantly with intelligent search that understands context, not just filenames.</p>
    </div>

    <div class="feature-card" style="transition-delay: 0.2s;">
        <h3 class="gold-text">🛡️ Zero Downtime</h3>
        <p>Our distributed system guarantees 99.99% uptime and resilience against network or hardware failures.</p>
    </div>

    <div class="feature-card" style="transition-delay: 0s;">
        <h3 class="gold-text">📁 Unlimited Storage</h3>
        <p>Choose from flexible pricing options, including plans with truly unlimited cloud storage for professionals and enterprises.</p>
    </div>

    <div class="feature-card" style="transition-delay: 0.1s;">
        <h3 class="gold-text">💬 Team Collaboration</h3>
        <p>Share folders, assign permissions, and work together in real time with integrated chat and file commenting.</p>
    </div>

    <div class="feature-card" style="transition-delay: 0.2s;">
        <h3 class="gold-text">🔧 API & Developers</h3>
        <p>Integrate LuxDrive into your own apps and workflows using our open REST API with detailed documentation.</p>
    </div>
</section>

@section Scripts {
    <script src="~/js/features.js" asp-append-version="true"></script>
}