@model IEnumerable<LuxDrive.Data.Models.File>

@{
    ViewData["Title"] = "LuxDrive";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/FileIndex.css" />


<div class="lux-wrapper">
    <aside class="lux-sidebar">
        <nav class="lux-nav">
            <h5>Навигация</h5>
            <a href="#" class="active"><i class="fas fa-th-large"></i> Всички файлове</a>
            <a href="#"><i class="fas fa-file-alt"></i> Документи</a>
            <a href="#"><i class="fas fa-image"></i> Снимки</a>
            <a href="#"><i class="fas fa-music"></i> Музика</a>
            <a href="#"><i class="fas fa-video"></i> Видеа</a>
            <a href="#"><i class="fas fa-file-archive"></i> Архиви</a>
        </nav>
    </aside>

    <main class="lux-main">

        <section class="upload-section">
            <h2 class="page-title">Моите <span style="color:#d4af37; font-weight:700;">Файлове</span></h2>

            <form asp-controller="File" asp-action="Upload" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <label for="file-upload" class="btn-upload-gold">
                    <i class="fas fa-cloud-upload-alt"></i> КАЧИ ФАЙЛОВЕ
                </label>
                <input type="file" id="file-upload" name="files" multiple style="display:none;" onchange="this.form.submit()" />
            </form>
        </section>

        @if (TempData["UploadError"] != null)
        {
            <div class="alert-error">
                <i class="fas fa-exclamation-circle"></i> @TempData["UploadError"]
            </div>
        }

        @if (Model != null && Model.Any())
        {
            <div class="lux-grid">
                @foreach (var file in Model)
                {
                    <div class="lux-card">
                        <div class="card-preview">
                            @{
                                string extension = file.Extension.ToLower();
                                string iconClass = "fas fa-file";
                                string iconColor = "#95a5a6";

                                if (extension == ".png" || extension == ".jpg" || extension == ".jpeg") { iconClass = "fas fa-image"; iconColor = "#d4af37"; }
                                else if (extension == ".pdf") { iconClass = "fas fa-file-pdf"; iconColor = "#e74c3c"; }
                                else if (extension.Contains("doc")) { iconClass = "fas fa-file-word"; iconColor = "#3498db"; }
                            }
                            <i class="@iconClass" style="color: @iconColor;"></i>
                        </div>

                        <div class="card-info">
                            <span class="file-name" title="@file.Name">@file.Name</span>
                            <div class="file-meta">
                                @((double)file.Size / 1024 / 1024 < 1 ? ((double)file.Size / 1024).ToString("0.0") + " KB" : ((double)file.Size / 1024 / 1024).ToString("0.00") + " MB")
                                • @file.UploadAt.ToLocalTime().ToString("dd.MM")
                            </div>
                        </div>

                        <button class="card-menu-btn" onclick="toggleMenu(this)">
                            <i class="fas fa-ellipsis-h"></i>
                        </button>

                        <div class="dropdown-menu">
                            <a href="@file.StorageUrl" target="_blank" class="menu-item"><i class="fas fa-download"></i> Изтегли</a>
                            <a href="#" class="menu-item"><i class="fas fa-pen"></i> Преименувай</a>
                            <a href="#" class="menu-item delete"><i class="fas fa-trash"></i> Изтрий</a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-folder-open"></i>
                <h3>Все още няма файлове</h3>
                <p>Използвайте златния бутон горе, за да качите първия си файл.</p>
            </div>
        }
    </main>
</div>

<script src="~/js/luxdrive-scripts.js"></script>