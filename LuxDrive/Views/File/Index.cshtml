@model IEnumerable<LuxDrive.Data.Models.File>

@{
    ViewData["Title"] = "LuxDrive";
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">

<link rel="stylesheet" href="~/css/fileIndex.css" />

<div class="lux-wrapper">

    <aside class="lux-sidebar">
        <nav class="lux-nav">
            <h5>Навигация</h5>
            <a href="@Url.Action("Index", "Home")" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")" data-filter="all" onclick="filterFiles(event)"><i class="fas fa-th-large"></i> Всички файлове</a>
            <a href="#" onclick="openFriendsModal()"><i class="fas fa-users"></i> Приятели</a>
            <a href="@Url.Action("SharedWithMe", "File")" class="@(ViewContext.RouteData.Values["Action"].ToString() == "SharedWithMe" ? "active" : "")"><i class="fas fa-share-square"></i> Споделени с мен</a>
            <hr style="border-color:#333; margin: 10px 0;">
            <a href="#" data-filter="document" onclick="filterFiles(event)"><i class="fas fa-file-alt"></i> Документи</a>
            <a href="#" data-filter="image" onclick="filterFiles(event)"><i class="fas fa-image"></i> Снимки</a>
            <a href="#" data-filter="music" onclick="filterFiles(event)"><i class="fas fa-music"></i> Музика</a>
            <a href="#" data-filter="video" onclick="filterFiles(event)"><i class="fas fa-video"></i> Видеа</a>
            <a href="#" data-filter="archive" onclick="filterFiles(event)"><i class="fas fa-file-archive"></i> Архиви</a>
        </nav>
    </aside>

    <main class="lux-main">
        <section class="upload-section">
            <h2 class="page-title">
                @if (ViewContext.RouteData.Values["Action"].ToString() == "SharedWithMe")
                {
                    <span>Споделени <span style="color:#d4af37;">с мен</span></span>
                }
                else
                {
                    <span>Моите <span style="color:#d4af37;">Файлове</span></span>
                }
            </h2>

            @if (ViewContext.RouteData.Values["Action"].ToString() != "SharedWithMe")
            {
                <form asp-controller="File" asp-action="Upload" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <label for="file-upload" class="btn-upload-gold">
                        <i class="fas fa-cloud-upload-alt"></i> КАЧИ ФАЙЛОВЕ
                    </label>
                    <input type="file" id="file-upload" name="files" multiple style="display:none;" onchange="this.form.submit()" />
                </form>
            }
        </section>

        @if (TempData["UploadError"] != null)
        {
            <div class="alert-error"><i class="fas fa-exclamation-circle"></i> @TempData["UploadError"]</div>
        }

        @if (Model != null && Model.Any())
        {
            <div class="lux-grid">
                @foreach (var file in Model)
                {
                    string ext = file.Extension?.ToLower() ?? "";
                    string fileType = "other";

                    if (ext.Contains("jpg") || ext.Contains("jpeg") || ext.Contains("png") || ext.Contains("gif") || ext.Contains("webp"))
                        fileType = "image";
                    else if (ext.Contains("pdf") || ext.Contains("doc") || ext.Contains("docx") || ext.Contains("xls") || ext.Contains("xlsx") || ext.Contains("txt"))
                        fileType = "document";
                    else if (ext.Contains("mp3") || ext.Contains("wav") || ext.Contains("ogg"))
                        fileType = "music";
                    else if (ext.Contains("mp4") || ext.Contains("avi") || ext.Contains("mov") || ext.Contains("mkv"))
                        fileType = "video";
                    else if (ext.Contains("zip") || ext.Contains("rar") || ext.Contains("7z"))
                        fileType = "archive";

                    <div class="lux-card" data-type="@fileType">
                        @if (ViewContext.RouteData.Values["Action"].ToString() != "SharedWithMe")
                        {
                            <input type="checkbox" class="file-checkbox" value="@file.Id" onchange="toggleSelection(this)" />
                        }

                        <div class="card-preview">
                            @{
                               
                                bool isImage = ext.Contains("jpg") || ext.Contains("jpeg") || ext.Contains("png") || ext.Contains("gif") || ext.Contains("webp");
                                string iconClass = "fas fa-file"; string iconColor = "#95a5a6";
                                if (ext.Contains("pdf")) { iconClass = "fas fa-file-pdf"; iconColor = "#e74c3c"; }
                                else if (ext.Contains("doc")) { iconClass = "fas fa-file-word"; iconColor = "#3498db"; }
                                else if (ext.Contains("xls")) { iconClass = "fas fa-file-excel"; iconColor = "#2ecc71"; }
                                else if (ext.Contains("zip") || ext.Contains("rar")) { iconClass = "fas fa-file-archive"; iconColor = "#f1c40f"; }
                            }
                            @if (isImage)
                            {
                                <img src="@file.StorageUrl" alt="@file.Name" class="file-thumb" />
                            }
                            else
                            {
                                <i class="@iconClass file-icon" style="color: @iconColor;"></i>
                            }
                        </div>
                        <div class="card-info">
                            <span class="file-name" title="@file.Name">@file.Name</span>
                            <div class="file-meta">@(file.Extension ?? "") • @file.UploadAt.ToString("dd.MM")</div>
                        </div>

                        <button class="card-menu-btn" onclick="toggleMenu(this)"><i class="fas fa-ellipsis-h"></i></button>
                        <div class="dropdown-menu">
                            <a href="#" class="menu-item" onclick="openShareModal('@file.Id')"><i class="fas fa-share-alt"></i> Сподели</a>
                            @if (ViewContext.RouteData.Values["Action"].ToString() != "SharedWithMe")
                            {
                                <a href="#" class="menu-item" onclick="promptRename('@file.Id', '@file.Name'); return false;"><i class="fas fa-pen"></i> Преименувай</a>
                            }
                            <a href="@file.StorageUrl" target="_blank" class="menu-item"><i class="fas fa-download"></i> Изтегли</a>
                            @if (ViewContext.RouteData.Values["Action"].ToString() != "SharedWithMe")
                            {
                                <a href="#" class="menu-item delete" onclick="deleteFile('@file.Id'); return false;"><i class="fas fa-trash"></i> Изтрий</a>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state"><i class="fas fa-folder-open"></i><h3>Няма намерени файлове</h3></div>
        }

        <div id="bulkActionsBar" class="bulk-actions-bar">
            <span class="bulk-count" id="bulkCount">0 избрани</span>
            <button class="btn-bulk share" onclick="openBulkShare()"><i class="fas fa-share-alt"></i> Сподели</button>
            <button class="btn-bulk delete" onclick="deleteSelectedFiles()"><i class="fas fa-trash"></i> Изтрий</button>
        </div>

        <div id="friendsModal" class="lux-modal">
            <div class="lux-modal-content">
                <div class="lux-modal-header">
                    <h3><i class="fas fa-users" style="color:#d4af37; margin-right:10px;"></i> Приятели</h3>
                    <span class="lux-close" onclick="closeFriendsModal()">&times;</span>
                </div>
                <div class="tab-container">
                    <button class="tab-btn active" onclick="switchTab('friends')">Списък</button>
                    <button class="tab-btn" onclick="switchTab('add')">Добави нов</button>
                    <button class="tab-btn" onclick="switchTab('pending')">Покани</button>
                </div>
                <div id="tab-friends" class="tab-content"><div id="myFriendsList" style="max-height: 350px; overflow-y:auto; padding-right:5px;"></div></div>
                <div id="tab-add" class="tab-content" style="display:none;">
                    <div style="text-align:center; padding: 10px 0;">
                        <input type="email" id="friendEmailInput" class="lux-input" placeholder="Въведете имейл (пр. ivan@abv.bg)" />
                        <button onclick="sendFriendRequestByEmail()" class="lux-btn-primary">Изпрати покана</button>
                    </div>
                    <div style="margin-top: 25px; border-top: 1px solid #333; padding-top: 15px;">
                        <h4 style="font-size:12px; color:#d4af37; text-transform:uppercase; margin-bottom:10px;">Изпратени (Чакащи)</h4>
                        <div id="sentRequestsList" style="max-height: 150px; overflow-y:auto;"></div>
                    </div>
                </div>
                <div id="tab-pending" class="tab-content" style="display:none;"><div id="pendingList" style="max-height: 350px; overflow-y:auto;"></div></div>
            </div>
        </div>

        <div id="shareModal" class="lux-modal">
            <div class="lux-modal-content">
                <div class="lux-modal-header">
                    <h3>Сподели Файл(ове)</h3>
                    <span class="lux-close" onclick="closeShareModal()">&times;</span>
                </div>
                <input type="hidden" id="fileIdToShare" />
                <p style="color:#aaa; margin-bottom:10px;">Изберете приятел от списъка:</p>
                <select id="friendSelect" class="lux-select"><option>Зареждане...</option></select>
                <button onclick="submitShare()" class="lux-btn-primary"><i class="fas fa-paper-plane"></i> ИЗПРАТИ СЕГА</button>
            </div>
        </div>

        <form id="deleteForm" asp-controller="File" asp-action="Delete" method="post" style="display:none;">@Html.AntiForgeryToken() <input type="hidden" name="id" id="deleteFileId" /></form>
        <form id="renameForm" asp-controller="File" asp-action="Rename" method="post" style="display:none;">@Html.AntiForgeryToken() <input type="hidden" name="fileId" id="renameFileId" /> <input type="hidden" name="newName" id="renameFileNewName" /></form>
    </main>
</div>

<script src="~/js/luxdrive-scripts.js"></script>
<script>

        function filterFiles(e) {
        e.preventDefault();

        const type = e.currentTarget.dataset.filter;

        // active стил
        document.querySelectorAll('.lux-nav a').forEach(a => a.classList.remove('active'));
        e.currentTarget.classList.add('active');

        document.querySelectorAll('.lux-card').forEach(card => {
            if (type === 'all' || card.dataset.type === type) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    }


    // --- Rename Logic ---
    function promptRename(id, oldName) {
        let newName = prompt("Въведете ново име:", oldName);
        if (newName != null && newName !== "") {
            document.getElementById('renameFileId').value = id;
            document.getElementById('renameFileNewName').value = newName;
            document.getElementById('renameForm').submit();
        }
    }

    // --- Share Logic ---
    let isBulkShare = false;

    function openShareModal(fileId) {
        isBulkShare = false;
        document.getElementById("fileIdToShare").value = fileId;
        document.getElementById("shareModal").style.display = "block";
        document.querySelectorAll('.dropdown-menu').forEach(m => m.style.display = 'none');
        loadFriendsForDropdown();
    }

    function openBulkShare() {
        if(selectedFileIds.size === 0) return;
        isBulkShare = true;
        document.getElementById("shareModal").style.display = "block";
        loadFriendsForDropdown();
    }

    async function submitShare() {
        const receiverId = document.getElementById('friendSelect').value;
        if(!receiverId) return alert("Изберете приятел!");

        if (isBulkShare) {
            const ids = Array.from(selectedFileIds);
            try {
                const response = await fetch(`/file/ShareMultiple?receiverId=${receiverId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(ids)
                });
                if(response.ok) { alert("Файловете са изпратени!"); closeShareModal(); clearSelection(); }
                else alert("Грешка при споделяне.");
            } catch(e) { console.error(e); }
        } else {
            const fileId = document.getElementById('fileIdToShare').value;
            try {
                const response = await fetch(`/file/share?fileId=${fileId}&receiverId=${receiverId}`, { method: 'POST' });
                if(response.ok) { alert("Файлът е изпратен!"); closeShareModal(); } else { alert("Грешка."); }
            } catch (e) { console.error(e); }
        }
    }

    // --- BULK SELECTION LOGIC ---
    const selectedFileIds = new Set();
    const bulkBar = document.getElementById('bulkActionsBar');
    const bulkCount = document.getElementById('bulkCount');

    function toggleSelection(checkbox) {
        if (checkbox.checked) {
            selectedFileIds.add(checkbox.value);
        } else {
            selectedFileIds.delete(checkbox.value);
        }
        updateBulkBar();
    }

    function updateBulkBar() {
        if (selectedFileIds.size > 0) {
            bulkBar.style.display = 'flex';
            bulkCount.innerText = selectedFileIds.size + " избрани";
        } else {
            bulkBar.style.display = 'none';
        }
    }

    function clearSelection() {
        selectedFileIds.clear();
        document.querySelectorAll('.file-checkbox').forEach(cb => cb.checked = false);
        updateBulkBar();
    }

    async function deleteSelectedFiles() {
        if(!confirm(`Сигурни ли сте, че искате да изтриете ${selectedFileIds.size} файла?`)) return;
        const ids = Array.from(selectedFileIds);
        try {
            const response = await fetch('/file/DeleteMultiple', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(ids)
            });
            if(response.ok) location.reload();
            else alert("Възникна грешка при изтриването.");
        } catch(e) { console.error(e); }
    }

    // --- Friends UI ---
    function openFriendsModal() { document.getElementById("friendsModal").style.display = "block"; switchTab('friends'); }
    function closeFriendsModal() { document.getElementById("friendsModal").style.display = "none"; }
    function closeShareModal() { document.getElementById("shareModal").style.display = "none"; }
    window.onclick = function(e) { if(e.target == document.getElementById("friendsModal")) closeFriendsModal(); if(e.target == document.getElementById("shareModal")) closeShareModal(); }

    function switchTab(tabName) {
        document.querySelectorAll('.tab-content').forEach(c => c.style.display = 'none');
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        document.getElementById('tab-' + tabName).style.display = 'block';
        if(tabName === 'friends') { document.querySelectorAll('.tab-btn')[0].classList.add('active'); loadMyFriends(); }
        if(tabName === 'add') { document.querySelectorAll('.tab-btn')[1].classList.add('active'); loadSentRequests(); }
        if(tabName === 'pending') { document.querySelectorAll('.tab-btn')[2].classList.add('active'); loadPendingRequests(); }
    }

    function getAvatar(name) {
        let letter = name ? name.charAt(0).toUpperCase() : "?";
        return `<div class="friend-avatar">${letter}</div>`;
    }

    async function loadMyFriends() {
        const container = document.getElementById('myFriendsList');
        container.innerHTML = '<div style="text-align:center; padding:20px; color:#888;">Зареждане...</div>';
        try {
            const response = await fetch('/api/friends/list');
            const friends = await response.json();
            container.innerHTML = '';
            if(friends.length === 0) {
                container.innerHTML = `<div style="text-align:center; color:#666; margin-top:40px;"><i class="fas fa-user-friends" style="font-size:40px; margin-bottom:15px; opacity:0.5;"></i><p>Все още нямате приятели.</p><button onclick="switchTab('add')" style="background:transparent; color:#d4af37; border:none; cursor:pointer; text-decoration:underline;">Добави някого сега</button></div>`;
                return;
            }
            friends.forEach(f => {
                container.innerHTML += `<div class="friend-card">${getAvatar(f.username)}<div class="friend-info"><span class="friend-name">${f.username}</span><span class="friend-email">${f.email}</span></div><button class="btn-remove-friend" onclick="removeFriend('${f.id}', '${f.username}')" title="Премахни"><i class="fas fa-trash-alt"></i></button></div>`;
            });
        } catch(e) { container.innerHTML = '<p style="color:red; text-align:center;">Грешка.</p>'; }
    }

    async function loadSentRequests() {
        const container = document.getElementById('sentRequestsList');
        container.innerHTML = '<small style="color:#666;">Зареждане...</small>';
        try {
            const response = await fetch('/api/friends/sent');
            const requests = await response.json();
            container.innerHTML = '';
            if(requests.length === 0) { container.innerHTML = '<small style="color:#555;">Нямате чакащи изпратени покани.</small>'; return; }
            requests.forEach(r => {
                container.innerHTML += `<div class="friend-card" style="padding:8px; background:#222;">${getAvatar(r.receiverName)}<div class="friend-info"><span class="friend-name" style="font-size:13px;">${r.receiverName}</span><span class="friend-email" style="font-size:11px;">${r.receiverEmail}</span></div><span class="status-badge"><i class="fas fa-clock"></i> Чака</span></div>`;
            });
        } catch(e) { container.innerHTML = '<small>Грешка</small>'; }
    }

    async function removeFriend(id, name) {
        if(!confirm(`Сигурни ли сте, че искате да премахнете ${name} от приятели?`)) return;
        try {
            const response = await fetch(`/api/friends/remove?friendId=${id}`, { method: 'POST' });
            if(response.ok) loadMyFriends(); else alert("Възникна грешка.");
        } catch(e) { console.error(e); }
    }

    async function loadPendingRequests() {
        const c = document.getElementById('pendingList');
        try {
            const r = await fetch('/api/friends/pending');
            const d = await r.json();
            c.innerHTML = d.length ? '' : '<div style="text-align:center;margin-top:40px;color:#666"><i class="fas fa-inbox" style="font-size:40px;margin-bottom:10px;opacity:0.5;"></i><br>Нямате нови покани.</div>';
            d.forEach(q => {
                c.innerHTML += `<div class="friend-card">${getAvatar(q.senderName)}<div class="friend-info"><span class="friend-name">${q.senderName}</span><span class="friend-email">${q.senderEmail}</span></div><button class="btn-accept" onclick="acceptRequestById(${q.id})"><i class="fas fa-check"></i> Приеми</button></div>`;
            });
        } catch(e){}
    }

    async function loadFriendsForDropdown() {
        const s = document.getElementById('friendSelect');
        s.innerHTML = '<option>Зареждане...</option>';
        try {
            const r = await fetch('/api/friends/list');
            const d = await r.json();
            s.innerHTML = d.length ? '' : '<option value="">Нямате приятели</option>';
            d.forEach(f => { let o = document.createElement("option"); o.value = f.id; o.text = f.username; s.appendChild(o); });
        } catch(e){ s.innerHTML = '<option>Грешка</option>'; }
    }

    async function sendFriendRequestByEmail() {
        const email = document.getElementById('friendEmailInput').value;
        if(!email) return alert("Въведете email");
        try {
            const s = await fetch(`/api/friends/search?email=${encodeURIComponent(email)}`);
            if(!s.ok) return alert("Няма такъв потребител");
            const u = await s.json();
            const r = await fetch(`/api/friends/request?receiverId=${u.id}`, { method: 'POST' });
            if(r.ok) { alert("Покана изпратена!"); document.getElementById('friendEmailInput').value=''; loadSentRequests(); }
            else alert(await r.text());
        } catch(e){}
    }
    async function acceptRequestById(id) { await fetch(`/api/friends/accept?requestId=${id}`, { method: 'POST' }); loadPendingRequests(); }
</script>