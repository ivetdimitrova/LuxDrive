@{
    ViewData["Title"] = "Pricing - LuxDrive";
}

<section class="hero">
    <div class="hero-text">
        <h1><span class="gold">LuxDrive</span> Pricing</h1>
        <p>Choose the plan that fits your digital lifestyle — from personal use to enterprise scale.</p>
    </div>
</section>

<section class="features" style="padding-top:60px;">

    <div class="feature show">
        <h2>💼 Basic Plan</h2>
        <p>50 GB of secure storage, basic file sharing, and 24/7 support.</p>
        <p style="color:#c6a664; font-size:1.2rem; margin-top:10px;">$4.99 / month</p>

        @if (User.Identity.IsAuthenticated)
        {
            <a href="/Pricing/Checkout?plan=basic" class="btn" style="margin-top:20px;">Get Started</a>
        }
        else
        {
            <a href="/Identity/Account/Login?returnUrl=/Pricing/Checkout?plan=basic" class="btn" style="margin-top:20px;">Get Started</a>
        }
    </div>

    <div class="feature show">
        <h2>🚀 Pro Plan</h2>
        <p>2 TB of cloud storage, priority support, and advanced sync features.</p>
        <p style="color:#c6a664; font-size:1.2rem; margin-top:10px;">$14.99 / month</p>

        @if (User.Identity.IsAuthenticated)
        {
            <a href="/Pricing/Checkout?plan=pro" class="btn" style="margin-top:20px;">Upgrade Now</a>
        }
        else
        {
            <a href="/Identity/Account/Login?returnUrl=/Pricing/Checkout?plan=pro" class="btn" style="margin-top:20px;">Upgrade Now</a>
        }
    </div>

    <div class="feature show">
        <h2>🏢 Enterprise Plan</h2>
        <p>Unlimited storage, dedicated account manager, and full enterprise integrations.</p>
        <p style="color:#c6a664; font-size:1.2rem; margin-top:10px;">Custom Pricing</p>

        @if (User.Identity.IsAuthenticated)
        {
            <a href="/Pricing/ContactSales" class="btn" style="margin-top:20px;">Contact Sales</a>
        }
        else
        {
            <a href="/Identity/Account/Login?returnUrl=/Pricing/ContactSales" class="btn" style="margin-top:20px;">Contact Sales</a>
        }
    </div>

</section>
