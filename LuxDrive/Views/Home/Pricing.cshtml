@{
    ViewData["Title"] = "Pricing - LuxDrive";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        background-color: #050505;
        color: #fff;
        font-family: 'Montserrat', 'Segoe UI', sans-serif;
        overflow-x: hidden;
        width: 100%;
    }

    .hero {
        height: 60vh; 
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        position: relative;
        overflow: hidden;
        perspective: 1000px;
    }

    .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at center, #1a1a1a 0%, #000 100%);
        z-index: 0;
    }

    .spotlight {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 1;
        background: radial-gradient(600px circle at var(--mouse-x, 50%) var(--mouse-y, 50%), rgba(198, 166, 100, 0.15), transparent 40%);
    }

    #particles-canvas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 2;
        pointer-events: none;
    }

    .hero-cloud {
        position: absolute;
        z-index: 3;
        opacity: 0.8;
        filter: drop-shadow(0 0 20px rgba(198, 166, 100, 0.2));
        pointer-events: none;
        will-change: transform;
    }

    .cloud-1 {
        top: 5%;
        left: -5%;
        width: 350px;
        filter: blur(2px);
        opacity: 0.6;
    }

    .cloud-2 {
        bottom: 10%;
        right: -5%;
        width: 400px;
        filter: blur(3px);
        opacity: 0.5;
    }

    .cloud-3 {
        top: 20%;
        right: 15%;
        width: 150px;
        opacity: 0.8;
    }

    .cloud-5 {
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 700px;
        opacity: 0.05;
        z-index: 1;
        filter: blur(10px);
    }

    .hero-text {
        position: relative;
        z-index: 10;
        max-width: 900px;
        padding: 0 20px;
        animation: fadeUpHero 1.5s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    }

    .gold-shimmer {
        background: linear-gradient(to right, #bf953f, #fcf6ba, #b38728, #fbf5b7, #aa771c);
        background-size: 200% auto;
        color: transparent;
        -webkit-background-clip: text;
        background-clip: text;
        animation: shine 4s linear infinite;
        font-weight: 800;
    }

    @@keyframes shine {
        to

    {
        background-position: 200% center;
    }

    }

    @@keyframes fadeUpHero {
        from

    {
        opacity: 0;
        transform: translateY(50px) scale(0.95);
    }

    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }

    }

    .hero-text h1 {
        font-size: 4.5rem;
        margin-bottom: 25px;
        line-height: 1.1;
        font-weight: 700;
        text-shadow: 0 10px 40px rgba(0,0,0,0.9);
    }

    .hero-text p {
        color: #d1d1d1;
        font-size: 1.3rem;
        margin-bottom: 20px;
        font-weight: 300;
    }

    .btn-glow {
        position: relative;
        padding: 12px 35px;
        font-size: 1rem;
        font-weight: 700;
        color: #fff;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(198, 166, 100, 0.5);
        border-radius: 50px;
        text-decoration: none;
        overflow: hidden;
        transition: 0.4s;
        backdrop-filter: blur(10px);
        display: inline-block;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-top: 25px;
        cursor: pointer;
    }

        .btn-glow:hover {
            background: rgba(198, 166, 100, 0.2);
            box-shadow: 0 0 30px rgba(198, 166, 100, 0.4);
            transform: translateY(-3px);
            border-color: #d4af37;
        }

    .features {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        padding: 50px 20px 150px 20px;
        gap: 40px;
        background: #000;
        position: relative;
        z-index: 2;
    }

    .feature {
        width: 350px;
        text-align: center;
        padding: 50px 30px;
        border: 1px solid rgba(255,255,255,0.08);
        border-radius: 20px;
        background: rgba(20, 20, 20, 0.6);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        opacity: 0; 
        transform: translateY(100px) scale(0.9); 
        transition: all 0.8s cubic-bezier(0.2, 0.8, 0.2, 1); 
    }

        .feature.show {
            opacity: 1;
            transform: translateY(0) scale(1); 
        }

        .feature:hover {
            border-color: rgba(198, 166, 100, 0.5);
            transform: translateY(-15px) !important; 
            background: rgba(30, 30, 30, 0.8);
            box-shadow: 0 20px 50px rgba(198, 166, 100, 0.15);
        }

        .feature h2 {
            color: #fff;
            font-size: 1.8rem;
            margin-bottom: 10px;
        }

        .feature p {
            color: #aaa;
            line-height: 1.6;
        }

    .price-tag {
        color: #c6a664;
        font-size: 1.8rem;
        font-weight: 700;
        margin: 20px 0;
        text-shadow: 0 0 10px rgba(198, 166, 100, 0.3);
    }

    @@media (max-width: 768px) {
        .hero

    {
        height: 50vh;
    }

    .hero-text h1 {
        font-size: 2.8rem;
    }

    }
</style>

<section class="hero" id="hero-section">
    <div class="hero-bg"></div>
    <div class="spotlight"></div>
    <canvas id="particles-canvas"></canvas>

    <img src="/images/gold-cloud.png" class="hero-cloud cloud-1" data-speed="0.05" data-depth="0.2" />
    <img src="/images/gold-cloud.png" class="hero-cloud cloud-2" data-speed="-0.06" data-depth="0.3" />
    <img src="/images/gold-cloud.png" class="hero-cloud cloud-3" data-speed="0.04" data-depth="0.5" />
    <img src="/images/gold-cloud.png" class="hero-cloud cloud-5" data-speed="0.01" data-depth="0.1" />

    <div class="hero-text">
        <h1>Select Your <span class="gold-shimmer">Plan</span></h1>
        <p>Unlock the full potential of LuxDrive. Simple pricing, no hidden fees.</p>
    </div>
</section>

<section class="features">

    <div class="feature" style="transition-delay: 0s;">
        <div>
            <h2>💼 Basic Plan</h2>
            <p>Perfect for personal backup. 50 GB secure storage & 24/7 support.</p>
            <div class="price-tag">€4.99 <span style="font-size:1rem; color:#888;">/ mo</span></div>
        </div>

        @if (User.Identity.IsAuthenticated)
        {
            <a href="/Pricing/Checkout?plan=basic" class="btn-glow">Get Started</a>
        }
        else
        {
            <a href="/Identity/Account/Login?returnUrl=/Pricing/Checkout?plan=basic" class="btn-glow">Get Started</a>
        }
    </div>

    <div class="feature" style="transition-delay: 0.2s; border-color: rgba(198, 166, 100, 0.3);">
        <div>
            <h2>🚀 Pro Plan</h2>
            <p>For power users. 2 TB cloud storage, priority support & advanced sync.</p>
            <div class="price-tag" style="font-size: 2.2rem;">€14.99 <span style="font-size:1rem; color:#888;">/ mo</span></div>
        </div>

        @if (User.Identity.IsAuthenticated)
        {
            <a href="/Pricing/Checkout?plan=pro" class="btn-glow">Upgrade Now</a>
        }
        else
        {
            <a href="/Identity/Account/Login?returnUrl=/Pricing/Checkout?plan=pro" class="btn-glow">Upgrade Now</a>
        }
    </div>

    <div class="feature" style="transition-delay: 0.4s;">
        <div>
            <h2>🏢 Enterprise</h2>
            <p>Unlimited storage, dedicated manager & full API access.</p>
            <div class="price-tag">Custom</div>
        </div>

        @if (User.Identity.IsAuthenticated)
        {
            <a href="/Pricing/ContactSales" class="btn-glow">Contact Sales</a>
        }
        else
        {
            <a href="/Identity/Account/Login?returnUrl=/Pricing/ContactSales" class="btn-glow">Contact Sales</a>
        }
    </div>

</section>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('show'); 
                        observer.unobserve(entry.target); 
                    }
                });
            }, {
                threshold: 0.15 
            });

            document.querySelectorAll('.feature').forEach(f => observer.observe(f));


            const hero = document.querySelector('.hero');
            hero.addEventListener('mousemove', (e) => {
                const rect = hero.getBoundingClientRect();
                hero.style.setProperty('--mouse-x', `${e.clientX - rect.left}px`);
                hero.style.setProperty('--mouse-y', `${e.clientY - rect.top}px`);
            });

            const clouds = document.querySelectorAll('.hero-cloud');
            let mouseX = 0, mouseY = 0, targetX = 0, targetY = 0;
            document.addEventListener('mousemove', (e) => {
                targetX = (window.innerWidth / 2 - e.pageX) / 20;
                targetY = (window.innerHeight / 2 - e.pageY) / 20;
            });
            function animateClouds() {
                mouseX += (targetX - mouseX) * 0.05;
                mouseY += (targetY - mouseY) * 0.05;
                const scrollY = window.scrollY;
                clouds.forEach(cloud => {
                    const speed = parseFloat(cloud.getAttribute('data-speed'));
                    const depth = parseFloat(cloud.getAttribute('data-depth'));
                    cloud.style.transform = `translate3d(${mouseX * depth}px, ${scrollY * depth + mouseY * depth}px, 0) rotate(${scrollY * speed * 5}deg)`;
                });
                requestAnimationFrame(animateClouds);
            }
            animateClouds();

            const canvas = document.getElementById('particles-canvas');
            const ctx = canvas.getContext('2d');
            let width, height, particles = [];
            function resize() { width = canvas.width = window.innerWidth; height = canvas.height = window.innerHeight; }
            window.addEventListener('resize', resize);
            resize();
            class Particle {
                constructor() { this.reset(); }
                reset() {
                    this.x = Math.random() * width; this.y = Math.random() * height;
                    this.size = Math.random() * 2 + 0.5;
                    this.speedX = (Math.random() - 0.5) * 0.5; this.speedY = (Math.random() - 0.5) * 0.5;
                    this.alpha = Math.random() * 0.5 + 0.1; this.fadingOut = Math.random() > 0.5;
                }
                update() {
                    this.x += this.speedX; this.y += this.speedY;
                    if(this.fadingOut){ this.alpha-=0.01; if(this.alpha<=0){this.fadingOut=false;this.reset();}}
                    else{ this.alpha+=0.01; if(this.alpha>=0.8)this.fadingOut=true;}
                }
                draw() {
                    ctx.fillStyle = `rgba(198, 166, 100, ${this.alpha})`;
                    ctx.beginPath(); ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2); ctx.fill();
                }
            }
            for(let i=0; i<80; i++) particles.push(new Particle());
            function animateP() { ctx.clearRect(0,0,width,height); particles.forEach(p=>{p.update();p.draw();}); requestAnimationFrame(animateP); }
            animateP();
        });
    </script>
}